{
  "name": "scribor",
  "productName": "Scribor",
  "description": "Note-taking app with LaTeX support",
  "version": "0.1.0",
  "keywords": [
    "Note-taking",
    "Stylus",
    "LaTex"
  ],
  "author": {
    "name": "Mattia Bruno",
    "email": "38449948+mbruno46@users.noreply.github.com"
  },
  "homepage": "https://mbruno46.github.io/scribor/",
  "bugs": {
    "url": "https://github.com/mbruno46/scribor/issues"
  },
  "license": "GPL-3.0-only",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "release": "electron-builder"
  },
  "build": {
    "appId": "com.electron.scribor",
    "copyright": "Copyright Â© 2021 ${author}",
    "files": [
      "src",
      "public",
      "!node_modules",
      "!doc"
    ],
    "directories": {
      "output": "release-builds"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "artifactName": "${productName}-${version}-${platform}-${arch}.${ext}"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility",
      "artifactName": "${productName}-${version}-${platform}-${arch}.${ext}"
    }    
  },
  "dependencies": {
    "mathjax-full": "^3.1.2",
    "pdfkit": "^0.11.0",
    "svgpath": "^2.3.0"
  },
  "devDependencies": {
    "electron": "^11.2.1",
    "electron-builder": "^22.9.1",
    "mathjax-full": "^3.1.2",
    "pdfkit": "^0.11.0",
    "svgpath": "^2.3.0"
  }
}
